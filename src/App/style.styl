*
	margin: 0
	padding: 0

body 
	background-color: rgba(209, 208, 195, 0.5)
	box-sizing: border-box
	color: #696969
	font-family: 'Arial'

li 
	list-style: none

a
	text-decoration: none

.container
	margin: 0 auto
	min-width: 280px
	padding: 20px
	width: 90%

.sort 
	background-color: white
	box-shadow: 0px 4px 16px -7px rgba(0,0,0,0.57)
	border-radius: 5px
	margin-bottom: 15px
	padding: 10px
	&__title 
		margin-right: 15px
	&__options
		border-radius: 5px
		border-color: #d9d9d9
		padding: 5px

.list
	display: flex
	flex-wrap: wrap
	justify-content: space-between
	&__item
		background-color: white
		border-radius: 5px
		cursor: pointer
		margin-bottom: 20px
		padding: 25px 10px
		min-width: 230px
		width: 30%
		text-align: center
		transition: .2s
		&:hover
			box-shadow: 0px 0px 25px 5px rgba(0,0,0,0.2);
		@media (max-width: 840px)
			width: 45%
		@media (max-width: 585px)
			width: 100%
	img 
		margin-bottom: 20px
		height: 150px
		width: 200px
	h4
		margin-bottom: 20px
	p 
		font-weight: 700
		text-transform: uppercase
	
.info-popup
	display: none
	&--open
		background-color: rgba(0,0,0, .5)
		display: flex
		height: 100%
		width: 100%
		position: fixed
		top: 0
		left: 0
			
.info
	background-color: white
	border-radius: 5px
	cursor: default
	display: flex
	margin: auto
	padding: 20px
	min-width: 400px
	width: 60%
	position: relative
	@media (max-width: 1000px)
		flex-direction: column
	&__image
		height: auto
		width: 80%
	&__name
		font-size: 20px
	&__desc
		color: rgba(147, 147, 147, 1)
		font-size: 14px 
		margin: 25px 0
	&__price
		margin-right: 25px
	&__price, &__quantity
		font-weight: 600
		font-size: 16px
		text-transform: uppercase
		input
			border: none
			color: #696969
			font-weight: 700
			font-size: 18px
			width: 32px
	&__sizes 
		border: none 
		border-top: 1px solid rgb(21, 64, 44)
		border-bottom: 1px solid rgb(21, 64, 44)
		margin-bottom: 20px
	&__size 
		color: rgb(21, 64, 44)
		input[type='radio']
			display: none
		input:checked + span
			background-color: rgb(21, 64, 44)
			color: white
		span 
			cursor: pointer
			display: inline-block
			font-weight: 700
			padding: 10px
			&:hover
				background-color: rgba(35, 108, 74, .5)
	.btn-buy
		background-color: rgb(21, 64, 44)
		border-radius: 5px
		border: none
		color: white
		cursor: pointer
		display: block 
		height: 40px
		line-height: 40px
		margin-top: 20px
		width: 150px
		text-align: center
		text-transform: uppercase
		&:hover
			background-color: rgb(35, 108, 74)
	.popup-hide
		color: rgb(177, 14, 0)
		font-size: 18px
		position: absolute
		top: 5px
		right: 10px
	.col
		width: 49%
		@media (max-width: 1000px)
			width: 100%
			&:nth-of-type(1) 
				margin-bottom: 20px
		&:nth-of-type(1) 
			text-align: center

.navbar
	background-color: #f7f7f7
	border-radius: 5px
	box-shadow: 0px 4px 16px -7px rgba(0,0,0,0.57);
	display: flex
	justify-content: flex-end
	margin-bottom: 30px	
	padding: 10px
	position: relative
	.btn-cart
		background: url('./images/cart.png') no-repeat 15% 50%
		background-size: 40px 40px 
		background-color: #ebebeb
		border-radius: 5px
		border: 1px solid #e6e6e6
		display: block
		height: 50px
		width: 70px
		position: relative
		&:hover 
			background-color: #e6e6e6
		.cart-items
			background-color: #dd2222
			border-radius: 50%
			color: white
			display: block
			font-size: 13px
			font-weight: 600
			padding: 2px 5px
			position: absolute
			bottom: 5px
			right: 5px

.cart-popup
	display: none
	&--show
		background-color: rgba(0,0,0, .5)
		display: flex
		height: 100%
		width: 100%
		padding: 10px
		position: fixed
		top: 0
		left: 0
.cart 
	background-color: #f7f7f7
	display: flex
	flex-direction: column
	width: 500px
	margin: auto
	padding: 20px 20px 0
	position: relative
	.total-price
		font-weight: 700
		padding: 15px
		text-align: right
	.cart-close
		color: rgb(177, 14, 0)
		position: absolute
		top: 3px
		left: 3px
.cart-list
	&__item
		background-color: #eaeaea 
		border-bottom: 1px solid #cccccc
		display: flex
		padding: 15px
		position: relative
		.col:nth-of-type(1)
			margin-right: 20px 
		.item-image
			width: 100px
		.item-name
			margin-bottom: 10px
		span 
			font-size: 14px
			margin-right: 10px
			font-weight: 700
		.item-remove
			color: rgb(177, 14, 0)
			position: absolute
			top: 10px
			right: 10px
